<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>User Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- jQuery -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>

    <!-- Custom CSS -->
    <link href="mystyles.css" rel="stylesheet" />


  </head>

  <body>
    <!-- Page Content -->
    <div class="login-container my-5">
      <div class="row justify-content-center">
        <div class="col">
          <div class="card">
            <div class="card-body">
              <div class="card-body d-flex justify-content-center">
                <img
                  src="/imgs/moo-high-resolution-logo-transparent.png"
                  alt="Logo"
                  width="100"
                  height="100"
                  class="mr-3"
                />
              </div>

              <h2 class="text-center mb-4">Log In</h2>

              <% if (errorMessage) { %>
              <div class="alert alert-danger" role="alert">
                <%= errorMessage %>
              </div>
              <% } %>

              <form action="/login" method="post">
                <!-- Email Address -->
                <div class="mb-3">
                  <label for="email" class="form-label">Email Address</label>
                  <input
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    maxlength="320"
                    required
                    placeholder="Enter email address"
                  />
                </div>

                <!-- Password -->
                <div class="mb-3">
                  <label for="password" class="form-label">Password<span id="message"></span></label>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    maxlength="64"
                    required
                    placeholder="Enter password"
                  />
                </div>

                <!-- Log In Button -->
                <button type="submit" class="login-button btn btn-primary">Log In</button>
              </form>

              <div class="register-button text-center mt-3">
                <p>Don't have an account? <a href="/register">Register</a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      // Server-side validation of password using regex
      $("form").submit((event) => {
        const password = $("#password").val();
        const msg = "Password must be at least 6 characters long";

        // Check if password meets the criteria
        if (password.length < 6) {
          // Password must be at least 6 characters long
          $("#message").html(msg).css("color", "red").show().fadeOut(8000);
          event.preventDefault();
        }
      });
    </script>

  </body>
</html>
